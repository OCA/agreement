<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="web.ListView.Buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//button[hasclass('o_list_button_add')]" position="before">
            <button
                t-if="props.resModel == 'agreement'"
                type="button"
                class="btn btn-primary create_agreement_from_template"
                data-tooltip="Expand"
                aria-label="Expand"
                t-on-click="expandAllGroups"
                style="margin-right: 10px;"
            >Create From Template</button>
        </xpath>
    </t>

    <t t-inherit="web.KanbanView.Buttons" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_cp_buttons')]" position="before">
            <button
                type="button"
                class="btn btn-primary create_agreement_from_template"
                data-tooltip="Expand"
                aria-label="Expand"
                t-on-click="expandAllGroups"
            >Create From Template</button>
        </xpath>
    </t>

</templates>
