<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Agreement Type List View-->
    <record id="agreement_type_view_tree" model="ir.ui.view">
        <field name="model">agreement.type</field>
        <field name="inherit_id" ref="agreement.agreement_type_view_tree" />
        <field name="arch" type="xml">
            <field name="domain" position="after">
                <field name="is_rebate" />
            </field>
        </field>
    </record>
    <!-- Agreement Type Form View -->
    <record id="agreement_type_view_form" model="ir.ui.view">
        <field name="model">agreement.type</field>
        <field name="inherit_id" ref="agreement.agreement_type_view_form" />
        <field name="arch" type="xml">
            <field name="domain" position="after">
                <field name="is_rebate" />
            </field>
        </field>
    </record>
    <record id="agreement_type_view_search" model="ir.ui.view">
        <field name="model">agreement.type</field>
        <field name="inherit_id" ref="agreement.agreement_type_view_search" />
        <field name="arch" type="xml">
            <filter name="archived" position="before">
                <separator />
                <filter
                    name="is_rebate"
                    string="Rebate"
                    domain="[('is_rebate', '=', True)]"
                />
            </filter>
        </field>
    </record>
</odoo>
